 <div ng-controller="addProductCtrl">
   
        <div class="modal-header">
            <h3 class="modal-title">Nuovo prodotto</h3>
        </div>
        <div class="modal-body col-sm-12 newPrdtForm">
        <table class="col-sm-12 table"><tr><td colspan="2">
            Codice Prodotto:</td><td colspan="3">
             <input class="col-sm-12" type="text" ng-model="prodCode"></td></tr><tr><td colspan="2">
             Nome prodotto:</td><td colspan="3">
             <input class="col-sm-12" type="text" ng-model="name"></td></tr><tr><td colspan="2">
            Descrizione prodotto:</td><td colspan="3">
             <input class="col-sm-12" type="text" ng-model="descr"></td></tr><tr><td>
             Numero di step:</td><td>
             <select class="col-sm-12" type="text" ng-model="numberofSteps"><select></td><td>
              Template Grafico:</td><td>
             <select class="col-sm-12" type="text" ng-model="templateCode"><select></td></tr></table>
             
        </div>
        <div class="modal-footer">
            <button class="btn btn-primary" type="button" ng-click="ok()">Conferma</button>
            <button class="btn btn-warning" type="button" ng-click="cancel()">Cancel</button>
        </div>
    