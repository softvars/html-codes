    <div class="col-sm-3 col-md-2 sidebar" ng-include="'source/templates/templ_sidebar.html'"> </div-->
<div class="col-sm-12 col-md-12 main">
<div ng-controller="productsCtrl">
    <h2></h2>
	<table st-table class="table table-striped productList">
		<thead>
			<tr>
				<th colspan="4">
				    <input st-search  class="form-control" placeholder="Search ..." type="text" />
				</th>
				<th>
				    <button type="button" 
						class="btn btn-sm btn-success" ng-click="go('/addProduct')" ng-controller="addProductCtrl">
						<i class="glyphicon glyphicon-plus"> </i> Aggiungi nuovo prodotto
					</button>
			     </th>
			</tr>

			<tr>
				<th>Codice</th>
				<th>Nome</th>
				<th>Descrizione</th>
				<th>Numero Step</th>
				<th>Template Grafico</th>
				<th>Preferito</th>
				<th>Data ultima pubblicazione</th>
				<th>Ambiente</th>
			</tr>

		</thead>
		<tbody>
			<tr ng-repeat="row in productCollection track by $index" ng-click="setselectedData(row)" data-idx = {{row.id}}>
				<td>{{row.prodCode}}</td> 
				<td>{{row.name}}</td>
				<td>{{row.descr}}</td>
				<td>{{row.numSteps}}</td>
				<td>{{row.templateCode}}</td>
				<td>{{row.favorite}}</td>
				<td></td>
				<td></td>
			</tr>
		</tbody>
	</table>
      <button class="btn btn-primary" type="button" ng-click="cancel()" ng-disabled='!enable_button'>Apri</button>
      <button class="btn btn-primary" type="button" ng-click="doAddDublicate()"  ng-disabled='!enable_button'>Duplica</button>
    <button class="btn btn-primary" type="button" ng-click="doModifyItem()"  ng-disabled='!enable_button'>Modifica</button>
    <button class="btn btn-danger" type="button" ng-click="doRemoveItem()"  ng-disabled='!enable_button'>Elimina</button>
  
</div>
</div>
<!--/div-->